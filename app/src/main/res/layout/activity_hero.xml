<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HeroActivity"
    android:background="@color/background"
    android:orientation="vertical"
    android:fillViewport="true"
    >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HeroActivity"
    android:orientation="vertical"
    android:background="@color/background">



    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="MAKE A HERO"
        android:textSize="@dimen/titleTextSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/characterPic"
        android:layout_width="@dimen/characterPicW"
        android:layout_height="@dimen/characterPicH"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/helmetPic"
        android:layout_width="@dimen/heroPicW"
        android:layout_height="@dimen/heroPicH"
        android:src="@drawable/helmet"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/armorPic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/leggingsPic"
        android:layout_width="@dimen/heroPicW"
        android:layout_height="@dimen/heroPicH"
        android:src="@drawable/leggings"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/armorPic" />

    <ImageView
        android:id="@+id/armorPic"
        android:layout_width="@dimen/heroPicW"
        android:layout_height="@dimen/heroPicH"
        android:layout_marginTop="168dp"
        android:src="@drawable/armor"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/shoesPic"
        android:layout_width="@dimen/heroPicW"
        android:layout_height="@dimen/heroPicH"
        android:src="@drawable/shoes"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leggingsPic" />

    <ImageView
        android:id="@+id/weaponPic"
        android:layout_width="@dimen/heroPicW"
        android:layout_height="@dimen/heroPicH"
        android:layout_marginTop="224dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/armorPic"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/shieldPic"
        android:layout_width="@dimen/heroPicW"
        android:layout_height="@dimen/heroPicH"
        android:layout_marginTop="224dp"
        android:src="@drawable/shield"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/armorPic"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>